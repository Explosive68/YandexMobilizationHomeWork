<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/ivSwapLanguages"
        android:layout_width="@dimen/image_size_normal"
        android:layout_height="@dimen/image_size_normal"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_full"
        android:layout_marginStart="@dimen/margin_full"
        android:src="@drawable/ic_swap_horiz" />

    <TextView
        android:id="@+id/tvLanguageFrom"
        style="@style/TextActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/ivSwapLanguages"
        android:text="Русский" />

    <TextView
        android:id="@+id/tvLanguageTo"
        style="@style/TextActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivSwapLanguages"
        android:text="Английский" />
</RelativeLayout>