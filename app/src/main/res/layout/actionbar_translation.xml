<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvLanguageFrom"
        style="@style/TextActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:padding="@dimen/margin_quarter"
        android:paddingEnd="@dimen/margin_half"
        android:text="@string/default_language_from" />

    <ImageView
        android:id="@+id/ivSwapLanguages"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingEnd="@dimen/margin_full"
        android:paddingStart="@dimen/margin_full"
        android:src="@drawable/ic_swap_horiz" />

    <TextView
        android:id="@+id/tvLanguageTo"
        style="@style/TextActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:padding="@dimen/margin_quarter"
        android:paddingStart="@dimen/margin_half"
        android:text="@string/default_language_to" />
</LinearLayout>