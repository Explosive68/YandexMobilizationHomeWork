<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppBarLayout">

    <android.support.v7.widget.Toolbar
        style="@style/AppToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLanguageFrom"
                style="@style/TextActionBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:padding="@dimen/margin_quarter"
                android:paddingRight="@dimen/margin_half"
                android:text="@string/default_language_from" />

            <ImageView
                android:id="@+id/ivSwapLanguages"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingRight="@dimen/margin_full"
                android:paddingLeft="@dimen/margin_full"
                android:src="@drawable/ic_swap_horiz" />

            <TextView
                android:id="@+id/tvLanguageTo"
                style="@style/TextActionBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:padding="@dimen/margin_quarter"
                android:paddingLeft="@dimen/margin_half"
                android:text="@string/default_language_to" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>