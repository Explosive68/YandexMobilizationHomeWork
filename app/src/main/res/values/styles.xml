<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionImage">
        <item name="android:layout_width">@dimen/image_size_action</item>
        <item name="android:layout_height">@dimen/image_size_action</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="WordInputActionImage" parent="ActionImage">
    </style>

    <style name="TranslationActionImage" parent="ActionImage">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
    </style>

    <style name="WordInputActionImageLand" parent="WordInputActionImage">
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
    </style>

    <style name="TranslationActionImageLand" parent="TranslationActionImage">
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
    </style>

    <style name="CleanWordActionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_quarter</item>
        <item name="android:paddingBottom">@dimen/margin_quarter</item>
        <item name="android:paddingEnd">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_quarter</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
    </style>

    <style name="InternalTabsTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_action_bar</item>
        <item name="android:textColor">@color/colorTextActionBar</item>
        <item name="android:textStyle"></item>
    </style>
</resources>
