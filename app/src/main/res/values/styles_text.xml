<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextHint">
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextRegular">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextTranslated">
        <item name="android:textSize">@dimen/text_size_translation</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextActionBar">
        <item name="android:textSize">@dimen/text_size_action_bar</item>
        <item name="android:textColor">@color/colorTextActionBar</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextLanguageSelectionItem">
        <item name="android:textSize">@dimen/text_size_list_item</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TextTranslationDirection">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextListEmptyMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_list_empty_msg</item>
        <item name="android:textColor">@color/colorTextListEmptyMessage</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_double</item>
        <item name="android:paddingEnd">@dimen/margin_double</item>
    </style>

    <style name="TextFullscreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextFullscreen</item>
        <item name="android:textSize">@dimen/text_size_fullscreen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/margin_full</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>